#!/usr/bin/env bash
command -v git &>/dev/null || { 
    echo "git is not installed. Please install it."
    echo "On Debian systems, you can do this using 'sudo apt update && sudo apt install git'."; 
    exit 1 
    }

git clone https://github.com/iotempire/iotempower ~/iot
cd ~/iot || exit 1
git config pull.rebase false
bash run "$@" < /dev/tty

# TODO: make sure user is in uucp or dialout group
# TODO: add iot to binary folder and PATH
